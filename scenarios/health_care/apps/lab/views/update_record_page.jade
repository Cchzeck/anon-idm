extends layout

block content
  h1 Update Record

  form(name="", method="post", action="/update_record")
    div(class="form-group")
      table(width="320", class="table")
        tr
          th(width="10")
          th="Record id"
          th="Prescription id"
          th="Current record's content"

        for record in record_list
          tr
            td
              input(type="radio" name="selection" value=record.id)
            td=record.id
            td=record.pid
            td=record.record
    
      textarea(rows="15" cols="50" name="record_content" class="form-control")
      br
      div(class="text-center")
        input(type="submit", name="submit", value="submit" class="btn btn-default") 









