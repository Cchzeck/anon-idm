extends layout

block content
  h1 Send Record to HIE

  form(name="", method="post", action="/send_record")
    div(class="form-group")
      table(width="320", class="table")
        tr
          th(width="10")
          th="Record id"
          th="Record's content"

        for record in record_list
          tr
            td
              input(type="radio" name="selection" value=record.id)
            td=record.id
            td=record.record
    
      br
      div(class="text-center")
        input(type="submit", name="submit", value="submit", class="btn btn-default") 


